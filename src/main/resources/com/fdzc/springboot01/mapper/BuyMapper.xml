<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fdzc.springboot01.mapper.BuyMapper">
    <select id="selectUserGoods" resultType="com.fdzc.springboot01.entity.vo.BuyVo">
        select
            b.id id,
            name,
            b.point point,
            image,
            time,
            num
        from
            buy b
                left join
            goods g
            on
                b.goods_id = g.id
        where
            b.user_id = #{id}
        order by
            `time` desc
    </select>
</mapper>