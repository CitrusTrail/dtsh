<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fdzc.springboot01.mapper.GroupMapper">
    <select id="selectAllGroup" resultType="com.fdzc.springboot01.entity.Group">
        select * from `group`
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="name != null and name != ''">
                and name like concat('%',#{name},'%')
            </if>
            <if test="description != null and description != ''">
                and description like concat('%',#{description},'%')
            </if>
        </where>
    </select>

    <select id="selectHotGroup" resultType="com.fdzc.springboot01.common.vo.HotGroupVo">
        select
            id,
            name,
            count(u.user_id) num
        from
            `group` g
                left join
            user_group u
            on
                g.id = u.group_id
        group by
            g.id
        order by
            count(u.user_id) desc
        limit
            #{num}
    </select>
</mapper>