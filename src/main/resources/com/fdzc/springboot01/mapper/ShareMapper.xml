<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTO Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fdzc.springboot01.mapper.ShareMapper">
    <select id="selectAllShare" resultType="com.fdzc.springboot01.entity.Share">
        select * from share
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="userId != null and userId != ''">
                and user_id = #{userId}
            </if>
            <if test="content != null and content != ''">
                and content like concat('%',#{content},'%')
            </if>
        </where>
        order by
            id desc
    </select>
</mapper>