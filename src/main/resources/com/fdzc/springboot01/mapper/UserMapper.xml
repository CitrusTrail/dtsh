<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fdzc.springboot01.mapper.UserMapper">

    <select id="selectAll" resultType="com.fdzc.springboot01.entity.User">
        select * from user
    </select>

    <select id="selectById" resultType="com.fdzc.springboot01.entity.User">
        select * from user where id=#{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into user(user_name,password,gender,birthday,dept_id)
        values(#{userName},#{password},#{gender},#{birthday},#{deptId})
    </insert>

    <update id="update">
        update user
        set
            user_name=#{userName},
            password=#{password},
            gender=#{gender},
            birthday=#{birthday},
            dept_id=#{deptId}
        where
            id=#{id}
    </update>

    <delete id="delete">
        delete from user where id=#{id}
    </delete>

    <select id="selectUserDept" resultType="com.fdzc.springboot01.vo.UserVo">
        select
            user_name,
            gender,
            birthday,
            d.id deptId,
            dept_name,
            description,
            address
        from
            department d
                left join
            user u
            on
                d.id = u.dept_id
    </select>

</mapper>